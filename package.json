{
  "name": "wonder-blocks",
  "version": "0.0.1",
  "description": "React components for Wonder Blocks design system.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --config ./eslint/eslintrc packages",
    "postinstall": "for d in packages/*/ ; do (cd \"$d\" && npm install --ignore-scripts); done",
    "build:all": "for d in packages/*/ ; do (cd \"$d\" && npm install); done",
    "flow": "flow",
    "gen-snapshot-tests": "node utils/gen-snapshot-tests.js && prettier --write packages/*/generated-snapshot.test.js",
    "jest": "SNAPSHOT_INLINE_APHRODITE=1 jest",
    "test": "npm run lint && npm run gen-snapshot-tests && npm run flow && npm run jest",
    "coverage": "SNAPSHOT_INLINE_APHRODITE=1 jest --coverage",
    "styleguidist": "styleguidist server",
    "build:styleguidist": "styleguidist build",
    "git-add-snapshot-tests": "git add packages/*/generated-snapshot.test.js",
    "pretty-quick": "pretty-quick --staged"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babylon": "^6.18.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "2.6.0",
    "eslint-plugin-flowtype": "^2.25.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-react": "7.7.0",
    "eslint-plugin-react-native-animation-linter": "0.1.1",
    "flow-bin": "0.57.3",
    "glob": "^7.1.2",
    "jest": "^22.4.2",
    "lerna": "^2.9.0",
    "marked": "^0.3.19",
    "pre-commit": "^1.2.2",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "react-docgen": "^2.20.1",
    "react-styleguidist": "^7.0.5",
    "react-test-renderer": "^15.3.0",
    "unescape": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-blocks": "^1.0.0",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {
    "aphrodite": "^1.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router-dom": "^4.2.2"
  },
  "jest": {
    "testRegex": ".test\\.jsx?$",
    "setupTestFrameworkScriptFile": "./test-setup.js",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "pre-commit": [
    "lint",
    "test",
    "git-add-snapshot-tests",
    "pretty-quick"
  ]
}
