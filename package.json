{
  "name": "wonder-blocks",
  "version": "0.0.1",
  "description": "React components for Wonder Blocks design system.",
  "main": "index.js",
  "scripts": {
    "install": "for d in packages/*/ ; do (cd \"$d\" && npm install); done",
    "flow": "flow",
    "gen-snapshot-tests": "node utils/gen-snapshot-tests.js",
    "jest": "SNAPSHOT_INLINE_APHRODITE=1 jest",
    "test": "npm run flow && npm run gen-snapshot-tests && npm run jest",
    "coverage": "SNAPSHOT_INLINE_APHRODITE=1 jest --coverage",
    "styleguidist": "styleguidist server",
    "build:styleguidist": "styleguidist build",
    "git-add-docs": "git add docs",
    "git-add-snapshot-tests": "git add packages/*/generated-snapshot.test.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.18.0",
    "babel-jest": "^22.4.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babylon": "^6.18.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "flow-bin": "0.53.0",
    "glob": "^7.1.2",
    "jest": "^22.4.2",
    "lerna": "^2.9.0",
    "marked": "^0.3.19",
    "pre-commit": "^1.2.2",
    "react-docgen": "^2.20.1",
    "react-styleguidist": "^7.0.5",
    "react-test-renderer": "^15.3.0",
    "unescape": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-blocks": "^1.0.0"
  },
  "dependencies": {
    "aphrodite": "^1.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "jest": {
    "testRegex": ".test\\.jsx?$",
    "setupTestFrameworkScriptFile": "./test-setup.js",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "pre-commit": [
    "test",
    "build:styleguidist",
    "git-add-docs",
    "git-add-snapshot-tests"
  ]
}
