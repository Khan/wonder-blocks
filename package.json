{
  "private": true,
  "name": "wonder-blocks",
  "version": "0.0.1",
  "description": "React components for Wonder Blocks design system.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf packages/wonder-blocks-*/dist && rm -rf packages/wonder-blocks-*/node_modules",
    "lint": "eslint --config ./eslint/eslintrc packages",
    "lint:watch": "esw --watch --config ./eslint/eslintrc packages",
    "build:cjs": "webpack --config build-settings/webpack.config.js --display-modules && node utils/package-flow-types.js",
    "build:es6": "rollup -c build-settings/rollup.config.js",
    "build:all": "yarn build:cjs && yarn build:es6",
    "watch:cjs": "webpack --config build-settings/webpack.config.js -w",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report -t text -t html -f ./node_modules/.bin/flow -i 'packages/wonder-blocks-*/**/*.js' -x 'packages/wonder-blocks-*/dist/*.js' -x '**/*.test.js' -x '**/node_modules/**/*.js'",
    "gen-snapshot-tests": "node utils/gen-snapshot-tests.js && prettier --write packages/*/generated-snapshot.test.js",
    "gen-styleguide-prod-config": "node utils/gen-styleguide-prod-config.js && prettier --write styleguide.prod.config.js",
    "jest": "jest --config config/jest/test.config.js",
    "test:vite": "jest --config config/jest/vite.config.js",
    "test:common": "yarn run build:all && yarn run lint && yarn run gen-snapshot-tests && yarn run flow",
    "test": "yarn run test:common && yarn run jest",
    "test:coverage": "yarn run test:common && yarn run jest --coverage",
    "coverage": "yarn run test:coverage && open coverage/lcov-report/index.html",
    "styleguidist": "styleguidist server",
    "start": "concurrently --kill-others-on-fail \"yarn run styleguidist\" \"webpack --config build-settings/webpack.config.js -w\" \"rollup -c build-settings/rollup.config.js -w\"",
    "start:prod": "yarn run build:styleguidist && yarn run styleguidist --config styleguide.prod.config.js",
    "build:styleguidist": "yarn run gen-styleguide-prod-config && styleguidist build --config styleguide.prod.config.js",
    "git-add-snapshot-tests": "git add packages/*/generated-snapshot.test.js",
    "pretty-quick": "pretty-quick --staged",
    "publish": "node utils/pre-publish-check.js && git diff --stat --exit-code HEAD && yarn build:cjs && yarn build:es6 && lerna publish",
    "dry-run-publish": "yarn run publish --skip-npm --skip-git"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@khanacademy/babel-plugin-vite": "^0.0.7",
    "@khanacademy/jest-environment-vite": "^0.0.7",
    "@khanacademy/vite-server": "^0.0.7",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0-beta.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-dynamic-import-node": "^2.1.0",
    "babylon": "^6.18.0",
    "codecov": "^3.0.4",
    "concurrently": "^3.6.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-flowtype": "^3.9.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-native-animation-linter": "^0.1.2",
    "eslint-watch": "^5.1.2",
    "flow-bin": "^0.101.0",
    "flow-coverage-report": "^0.5.0",
    "glob": "^7.1.2",
    "jest": "^24.8.0",
    "jest-enzyme": "^7.0.2",
    "lerna": "^2.11.0",
    "marked": "^0.3.19",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.4.1",
    "react-docgen": "^2.20.1",
    "react-router-enzyme-context": "^1.2.0",
    "react-styleguidist": "^7.0.20",
    "react-test-renderer": "^16.4.1",
    "rollup": "^0.64.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.0.0-beta.2",
    "unescape": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-blocks": "^1.0.0",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {
    "aphrodite": "^1.2.5",
    "inquirer": "^6.0.0",
    "popper.js": "^1.14.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.3",
    "react-dom": "^16.4.3",
    "react-popper": "^1.0.0",
    "react-router-dom": "^4.2.2"
  },
  "workspaces": [
    "packages/*",
    "build-settings"
  ],
  "pre-commit": [
    "lint",
    "test",
    "git-add-snapshot-tests",
    "pretty-quick"
  ]
}
