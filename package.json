{
  "private": true,
  "name": "wonder-blocks",
  "version": "0.0.1",
  "description": "React components for Wonder Blocks design system.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf packages/wonder-blocks-*/dist && rm -rf packages/wonder-blocks-*/node_modules",
    "lint": "eslint --config ./eslint/eslintrc packages",
    "lint:watch": "esw --watch --config ./eslint/eslintrc packages",
    "build:cjs": "webpack --display-modules && node utils/package-flow-types.js",
    "build:es6": "rollup -c rollup.config.js",
    "build:all": "yarn build:cjs && yarn build:es6",
    "watch:cjs": "webpack -w",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report -t text -t html -f ./node_modules/.bin/flow -i 'packages/wonder-blocks-*/**/*.js' -x 'packages/wonder-blocks-*/dist/*.js' -x '**/*.test.js' -x '**/node_modules/**/*.js'",
    "gen-snapshot-tests": "node utils/gen-snapshot-tests.js && prettier --write packages/*/generated-snapshot.test.js",
    "gen-styleguide-prod-config": "node utils/gen-styleguide-prod-config.js && prettier --write styleguide.prod.config.js",
    "jest": "jest",
    "test:common": "yarn run lint && yarn run gen-snapshot-tests && yarn run build:all && yarn run flow",
    "test": "yarn run test:common && yarn run jest",
    "test:coverage": "yarn run test:common && yarn run jest --coverage",
    "coverage": "yarn run test:coverage && open coverage/lcov-report/index.html",
    "styleguidist": "styleguidist server",
    "start": "concurrently --kill-others-on-fail \"yarn run styleguidist\" \"webpack -w\"",
    "start:prod": "yarn run build:styleguidist && yarn run styleguidist --config styleguide.prod.config.js",
    "build:styleguidist": "yarn run gen-styleguide-prod-config && styleguidist build --config styleguide.prod.config.js",
    "git-add-snapshot-tests": "git add packages/*/generated-snapshot.test.js",
    "pretty-quick": "pretty-quick --staged",
    "publish": "node utils/pre-publish-check.js && git diff --stat --exit-code HEAD && yarn build:cjs && yarn build:es6 && lerna publish",
    "dry-run-publish": "yarn run publish --no-npm --no-git"
  },
  "author": "",
  "license": "MIT",
  "//": [
    "enzyme-adapter-react-16: TODO(sophie): We should revert back to the latest release of this when the issue at https://github.com/airbnb/enzyme/issues/1509 is fixed"
  ],
  "devDependencies": {
    "//": [
      "TODO(sophie): We should revert back to the latest release of this",
      "when the issue at https://github.com/airbnb/enzyme/issues/1509 is fixed"
    ],
    "babel-core": "6.26.3",
    "babel-eslint": "^9.0.0-beta.3",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-dynamic-import": "^2.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babylon": "^6.18.0",
    "codecov": "^3.0.4",
    "concurrently": "^3.6.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "npm:enzyme-react-adapter-future",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "2.6.0",
    "eslint-plugin-flowtype": "^2.25.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-react": "7.7.0",
    "eslint-plugin-react-native-animation-linter": "0.1.1",
    "eslint-watch": "^4.0.1",
    "flow-bin": "0.75.0",
    "flow-coverage-report": "^0.5.0",
    "glob": "^7.1.2",
    "jest": "^23.3.0",
    "jest-enzyme": "^6.0.2",
    "lerna": "^2.11.0",
    "marked": "^0.3.19",
    "pre-commit": "^1.2.2",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "react-docgen": "^2.20.1",
    "react-styleguidist": "^7.0.20",
    "react-test-renderer": "^16.4.1",
    "rollup": "^0.64.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^3.0.7",
    "unescape": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-blocks": "^1.0.0",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {
    "aphrodite": "^1.2.5",
    "inquirer": "^6.0.0",
    "popper.js": "^1.14.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-popper": "^1.0.0",
    "react-router-dom": "^4.2.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "globals": {
      "SNAPSHOT_INLINE_APHRODITE": true
    },
    "testRegex": ".test\\.jsx?$",
    "setupTestFrameworkScriptFile": "./test-setup.js",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/**/dist/index.js",
      "!<rootDir>/node_modules/",
      "!packages/**/node_modules/"
    ]
  },
  "pre-commit": [
    "lint",
    "test",
    "git-add-snapshot-tests",
    "pretty-quick"
  ]
}
