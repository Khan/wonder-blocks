{
  "name": "wonder-blocks",
  "version": "0.0.1",
  "description": "React components for Wonder Blocks design system.",
  "main": "index.js",
  "scripts": {
    "install": "for d in packages/*/ ; do (cd \"$d\" && npm install); done",
    "flow": "flow",
    "jest": "STORYBOOK_INLINE_APHRODITE=1 jest",
    "test": "npm run flow && npm run jest",
    "coverage": "STORYBOOK_INLINE_APHRODITE=1 jest --coverage",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build:storybook": "build-storybook -c .storybook -o docs && git add docs"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.3.14",
    "@storybook/react": "^3.3.14",
    "babel-core": "6.18.0",
    "babel-jest": "^22.4.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "flow-bin": "0.53.0",
    "jest": "^22.4.2",
    "lerna": "^2.9.0",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^15.3.0",
    "storybook-addon-jsx": "^5.3.0"
  },
  "dependencies": {
    "aphrodite": "^1.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "jest": {
    "testRegex": ".test\\.jsx?$",
    "setupTestFrameworkScriptFile": "./test-setup.js",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "pre-commit": [
    "test",
    "build:storybook"
  ]
}
